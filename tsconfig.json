{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"plugins": [
			{}
		]
	},
	"include": [
		"src/**/*",
		"__test__/**/*",
	]
}